<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/start_btn"
                style="@style/media_buts"
                android:background="@drawable/ic_baseline_play_arrow_24" />

            <Button
                android:id="@+id/pause_btn"
                style="@style/media_buts"
                android:background="@drawable/ic_baseline_pause_24" />

            <Button
                android:id="@+id/stop_btn"
                style="@style/media_buts"
                android:background="@drawable/ic_baseline_stop_24" />
        </LinearLayout>

        <TextView
            style="@style/label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song_title" />

        <TextView
            android:id="@+id/detail_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song_artist" />

        <TextView
            android:id="@+id/detail_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song_lyrics" />

        <TextView
            android:id="@+id/detail_song_lyrics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textStyle="italic" />
    </LinearLayout>

</ScrollView>


